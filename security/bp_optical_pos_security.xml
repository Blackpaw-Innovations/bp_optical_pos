<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Optical POS User Group -->
        <record id="group_optical_pos_user" model="res.groups">
            <field name="name">Optical POS User</field>
            <field name="category_id" ref="base.module_category_sales_point_of_sale"/>
            <field name="implied_ids" eval="[(4, ref('point_of_sale.group_pos_user'))]"/>
        </record>

        <!-- Optical POS Manager Group -->
        <record id="group_optical_pos_manager" model="res.groups">
            <field name="name">Optical POS Manager</field>
            <field name="category_id" ref="base.module_category_sales_point_of_sale"/>
            <field name="implied_ids" eval="[(4, ref('bp_optical_pos.group_optical_pos_user')), (4, ref('point_of_sale.group_pos_manager'))]"/>
        </record>
    </data>
</odoo>
